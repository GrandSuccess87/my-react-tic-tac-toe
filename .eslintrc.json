{
    "extends" :"react-app",
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [2, 2],
        "react/jsx-indent": ["error", 2],
        "semi": ["error", "always"],
        "no-trailing-spaces": [2, {"skipBlankLines": false}]
    }
}
